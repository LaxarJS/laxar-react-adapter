{
  "name": "laxar-react-adapter",
  "version": "2.0.0-alpha.0",
  "description": "Write LaxarJS widgets and controls using React",
  "main": "laxar-react-adapter.js",
  "browser": "dist/laxar-react-adapter.js",
  "scripts": {
    "prepublish": "npm run dist",
    "test": "npm run karma && npm run eslint",
    "browser-spec": "npm run browser-spec-build && npm run browser-spec-start",
    "dist": "cross-env NODE_ENV=production webpack",
    "browser-spec-build": "cross-env NODE_ENV=browser-spec webpack",
    "browser-spec-start": "cross-env NODE_ENV=browser-spec webpack-dev-server --port 8084 --inline",
    "karma": "karma start karma.config.js",
    "eslint": "eslint laxar-react-adapter.js *.config.js lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LaxarJS/laxar-react-adapter.git"
  },
  "peerDependencies": {
    "laxar": "^2.0.0-alpha.14",
    "react": "^15.3.0",
    "react-dom": "^15.3.0"
  },
  "keywords": [
    "LaxarJS",
    "React",
    "Widget",
    "Control"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LaxarJS/laxar-react-adapter/issues"
  },
  "homepage": "https://github.com/LaxarJS/laxar-react-adapter#readme",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-object-rest-spread": "^6.20.1",
    "babel-preset-es2015": "^6.18.0",
    "cross-env": "^3.1.4",
    "eslint": "^3.13.1",
    "eslint-config-laxarjs": "^0.3.0",
    "jasmine-core": "~2.5.2",
    "karma": "^1.4.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.1",
    "laxar": "^2.0.0-alpha.13",
    "react": "^15.2.0",
    "react-dom": "^15.2.0",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0",
    "webpack-jasmine-html-runner-plugin": "^0.5.0"
  }
}
